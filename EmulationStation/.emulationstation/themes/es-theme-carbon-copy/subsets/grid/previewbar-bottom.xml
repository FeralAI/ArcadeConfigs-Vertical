<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

  <!-- Shift Y -0.075 when help is enabled -->

  <customView name="Carousel,Boxes,Tiles,Icons,grid">
    <imagegrid name="gamegrid">
      <showVideoAtDelay>-1</showVideoAtDelay>
    </imagegrid>
  </customView>

  <customView name="Carousel,Boxes,Tiles,Icons,grid">
    <image name="gamelistBackground" extra="true">
      <path>./../../art/filter.png</path>
      <color>000000A0</color>
      <origin>0 0</origin>
      <pos>0.0 0.75</pos>
      <pos ifHelpPrompts="true">0.0 0.675</pos>
      <size>1.0 0.3</size>
      <zIndex>12</zIndex>
    </image>

    <image name="gamelistLineZ" extra="true">
      <path>./../../art/white.png</path>
      <color>${glowColor}</color>
      <origin>0 0</origin>
      <pos>0.0 0.75</pos>
      <pos ifHelpPrompts="true">0.0 0.675</pos>
      <size>1.0 0.003</size>
      <zIndex>14</zIndex>
    </image>

    <image name="md_image">
      <visible>false</visible>
    </image>

    <text name="md_name">
      <color>ffffffff</color>
      <pos>0.015 0.76</pos>
      <pos ifHelpPrompts="true">0.015 0.685</pos>
      <size>0.55 0</size>
      <color>F0F0F0</color>
      <fontSize>0.03</fontSize>
      <fontPath>./../../art/fonts/Cabin-Bold.ttf</fontPath>
      <alignment>left</alignment>
      <glowColor>${glowColor}</glowColor>
      <glowSize>2</glowSize>
      <glowOffset>1 1</glowOffset>
      <lineSpacing>1.1</lineSpacing>
    </text>

    <text name="md_description">
      <pos>0.015 0.8</pos>
      <pos ifHelpPrompts="true">0.015 0.725</pos>
      <size>0.55 0.145</size>
      <fontSize>0.025</fontSize>
      <color>A0A0B0</color>
      <lineSpacing>1.3</lineSpacing>
    </text>

    <text name="md_developer">
      <color>EFEFFF</color>
      <pos>0.015 0.96</pos>
      <pos ifHelpPrompts="true">0.015 0.885</pos>
      <size>0.4 0.05</size>
      <alignment>left</alignment>
      <fontSize>0.025</fontSize>
    </text>

    <video name="md_video">
      <pos>0.7825 0.8775</pos>
      <pos ifHelpPrompts="true">0.7825 0.8025</pos>
      <maxSize>0.4 0.225</maxSize>
      <origin>0.5 0.5</origin>
      <delay>0.5</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <loops>0</loops>
      <roundCorners>0.02</roundCorners>
    </video>
  
    <rating name="md_rating">
      <origin>0.5 0.5</origin>
      <pos>0.55 0.985</pos>
      <pos ifHelpPrompts="true">0.55 0.91</pos>
      <size>0.0425 0.015</size>
      <color>FFFF00</color>
      <unfilledColor>808080</unfilledColor>
    </rating>

    <datetime name="md_releasedate">
      <color>EFEFFF</color>
      <origin>0.5 0.5</origin>
      <pos>0.5 0.97</pos>
      <pos ifHelpPrompts="true">0.5 0.895</pos>
      <fontSize>0.02</fontSize>
      <alignment>right</alignment>
    </datetime>

    <image name="md_hidden">
      <path>./../../art/hidden.svg</path>
      <pos>0.975 0.205</pos>
      <pos ifHelpPrompts="true">0.975 0.13</pos>
      <maxSize>0.02 0.03</maxSize>
      <origin>0.5 0.5</origin>
      <color>A0A0B0</color>
      <zIndex>150</zIndex>
    </image>

    <image name="md_flag">
      <origin>0.5 0.5</origin>
      <pos>0.45 0.971</pos>
      <pos ifHelpPrompts="true">0.45 0.896</pos>
      <maxSize>0.02 0.05</maxSize>
    </image>
  </customView>
  
  <customView name="Carousel, Boxes,Tiles,Icons,grid">
    <imagegrid name="gamegrid">
      <pos>0 0.125</pos>
      <size>1 0.625</size>
      <size ifHelpPrompts="true">1 0.55</size>
    </imagegrid>
    <imagegrid name="gamegrid" ifSubset="infoBar:false">
      <pos>0 0.125</pos>
      <size>1 0.625</size>
      <size ifHelpPrompts="true">1 0.55</size>
    </imagegrid>
  </customView>
  
  <customView name="Carousel">
    <imagegrid name="gamegrid">
      <autoLayout>3 1</autoLayout>
      <padding>0.01 0.18 0.01 0.24</padding>
    </imagegrid>
  </customView>
    
</theme>
